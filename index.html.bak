	<body>
	<a href="2048/2048.html">2048游戏</a><br>
	<a href="tetris/tetris.html">2048游戏</a><br>
	<a href="AirWar/AirWar.html">2048游戏</a><br>
	<a href="kaifanla/kfl.html">2048游戏</a><br>
	<canvas id="c3" width="500" height="500"></canvas>
	<script>
	

		var ctx3=c3.getContext('2d');
		function open(){
			ctx3.beginPath();
			ctx3.arc(250,250,200,45*Math.PI/180,315*Math.PI/180);
			ctx3.lineTo(250,250);
			ctx3.closePath();
			ctx3.stroke();
			
			//-----------眼睛
			ctx3.beginPath();
			ctx3.arc(250,150,50,0,360*Math.PI/180);
			ctx3.fillStyle="#abf";
			ctx3.fill();
			

			ctx3.beginPath();
			ctx3.arc(270,125,10,0,360*Math.PI/180);
			ctx3.fillStyle="#fff";
			ctx3.fill();
			
			
		}
		

		function close(){
			ctx3.beginPath();
			ctx3.arc(250,250,200,0,360*Math.PI/180);
			ctx3.lineTo(250,250);
			ctx3.closePath();
			ctx3.stroke();

			ctx3.beginPath();
			ctx3.arc(250,150,50,0,360*Math.PI/180);
			ctx3.fillStyle="#abf";
			ctx3.fill();

			ctx3.beginPath();
			ctx3.arc(270,125,10,0,360*Math.PI/180);
			ctx3.fillStyle="#fff";
			ctx3.fill();
		}
		var time=0;
		setInterval(function(){
			ctx3.clearRect(0,0,500,500);
			time+=100;
			if(time%200==0){
				open();
			}else{
				close()
			}
		},300)
	

		
		
			


	</script>
	</body>
</html>
